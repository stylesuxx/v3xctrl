#!/bin/bash
set -e

ENV_PATH="/run/v3xctrl.env"
source "${ENV_PATH}"

relay_host="${server_relay_host}"
extra_args=()

# Split host:port if provided
if [[ "$server_relay_host" == *:* ]]; then
  relay_host="${server_relay_host%%:*}"
  relay_port="${server_relay_host##*:}"
  extra_args+=(--port "$relay_port")
fi

json=$(
  v3xctrl-python -m v3xctrl_udp_relay.apps.getRelayInfo \
    "$relay_host" "$server_relay_sessionId" \
    --port-video "$server_ports_video_bind" \
    --port-control "$server_ports_control_bind" \
    --log "$development_logLevel" \
    "${extra_args[@]}"
)

server_direct_host=$(echo "$json" | jq -r '.server.direct.host')
server_ports_video=$(echo "$json" | jq -r '.ports.video')
server_ports_control=$(echo "$json" | jq -r '.ports.control')

sed -i \
  -e "s/^server_direct_host=.*/server_direct_host=${server_direct_host}/" \
  -e "s/^server_ports_video=.*/server_ports_video=${server_ports_video}/" \
  -e "s/^server_ports_control=.*/server_ports_control=${server_ports_control}/" \
  "$ENV_PATH"
