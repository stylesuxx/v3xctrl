#!/bin/bash
set -e

ENV_PATH="/run/v3xctrl.env"
source "${ENV_PATH}"

relay_host="${server_relayServer}"
extra_args=()

# Split host:port if provided
if [[ "$server_relayServer" == *:* ]]; then
  relay_host="${server_relayServer%%:*}"
  relay_port="${server_relayServer##*:}"
  extra_args+=(--port "$relay_port")
fi

json=$(
  v3xctrl-python -m v3xctrl_udp_relay.apps.getRelayInfo \
    "$relay_host" "$server_relaySessionId" \
    --port-video "$ports_video_bind" \
    --port-control "$ports_control_bind" \
    --log "$extras_logLevel" \
    "${extra_args[@]}"
)

server_host=$(echo "$json" | jq -r '.server.host')
ports_video=$(echo "$json" | jq -r '.ports.video')
ports_control=$(echo "$json" | jq -r '.ports.control')

sed -i \
  -e "s/^server_host=.*/server_host=${server_host}/" \
  -e "s/^ports_video=.*/ports_video=${ports_video}/" \
  -e "s/^ports_control=.*/ports_control=${ports_control}/" \
  "$ENV_PATH"
