[Unit]
Description=Service Manager (autostarts video and control services)
After=network.target v3xctrl-wifi-mode.service v3xctrl-setup-env.service
Requires=v3xctrl-wifi-mode.service v3xctrl-setup-env.service

[Service]
Type=oneshot
User=root
Group=root
ExecStartPre=/usr/bin/systemctl stop v3xctrl-video.service v3xctrl-control.service
ExecStart=/usr/bin/v3xctrl-service-manager
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
