[Unit]
Description=Switch between Wi-Fi client and AP mode
After=sys-subsystem-net-devices-wlan0.device v3xctrl-setup-env.service
Requires=sys-subsystem-net-devices-wlan0.device v3xctrl-setup-env.service

[Service]
Type=oneshot
User=root
Group=root
ExecStart=/usr/bin/v3xctrl-wifi-mode
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
