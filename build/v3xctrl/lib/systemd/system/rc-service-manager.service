[Unit]
Description=Service Manager (autostarts video and control services)
After=network.target rc-wifi-mode.service
Requires=rc-wifi-mode.service pigpiod.service

[Service]
Type=oneshot
User=root
Group=root
ExecStart=/usr/bin/rc-service-manager
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
